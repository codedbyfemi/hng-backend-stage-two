generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Country {
  id               Int       @id @default(autoincrement())
  name             String    @unique @db.VarChar(100)
  capital          String?   @db.VarChar(100)
  region           String?   @db.VarChar(100)
  population       BigInt
  currency_code    String?   @db.VarChar(10)
  exchange_rate    Float?    @db.Double
  estimated_gdp    Float?    @db.Double
  flag_url         String?   @db.VarChar(255)
  last_refreshed_at DateTime @default(now()) @updatedAt
}

model RefreshMeta {
  id                Int       @id @default(1)
  total_countries   Int       @default(0)
  last_refreshed_at DateTime? 

  @@map("refresh_meta")
}
